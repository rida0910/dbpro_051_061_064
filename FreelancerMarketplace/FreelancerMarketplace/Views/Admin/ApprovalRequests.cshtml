@model IEnumerable<FreelancerMarketplace.Models.Person>

@{
    ViewBag.Title = "ApprovalRequests";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}
}
<br />
<center><h2>Approval Requests</h2></center>

@foreach (var item in Model)
{
    <div class="container">
        <!-- Freelancers List Container -->
        <div class="freelancers-container freelancers-list-layout margin-top-35">

            <!--Freelancer -->
            <div class="freelancer">

                <!-- Overview -->
                <div class="freelancer-overview">
                    <div class="freelancer-overview-inner">

                        <!-- Bookmark Icon -->
                        <span class="bookmark-icon"></span>

                        <!-- Avatar -->
                        <div class="freelancer-avatar">
                            
                            <a href="single-freelancer-profile.html"><img src="@Url.Content(item.ProfilePicture)" alt="Image not available"></a>
                        </div>

                        <!-- Name -->
                        <div class="freelancer-name">
                            <h4><a href="#">@Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem => item.LastName)</a></h4>
                            
                            <!-- Rating -->
                            <div class="freelancer-rating">
                                <strong>Email: </strong>
                                @Html.DisplayFor(modelItem => item.AspNetUser.Email)
                            </div>
                            
                            </div>
                        </div>
                </div>

                <!-- Details -->
                <div class="freelancer-details">
                    <div class="freelancer-details-list">
                        <ul>
                            <li>Location <strong><i class="icon-material-outline-location-on"></i> @Html.DisplayFor(modelItem => item.Nationality)</strong></li>
                            <li>Phone number <strong>@Html.DisplayFor(modelItem => item.AspNetUser.PhoneNumber)</strong></li>
                            <li></li>
                        </ul>
                    </div>
                    <a  href="/Admin/ViewFreelancerProfile/@item.PersonId" class="button button-sliding-icon ripple-effect">View Profile <i class="icon-material-outline-arrow-right-alt"></i></a>
                </div>
            </div>
            <!-- Freelancer / End -->

        </div>
    </div>
}
