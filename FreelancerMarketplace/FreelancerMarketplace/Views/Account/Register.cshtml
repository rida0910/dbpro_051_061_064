@model FreelancerMarketplace.Models.RegisterViewModel
@{
    ViewBag.Title = "Signup";
}

<head>

    <!-- Basic Page Needs
    ================================================== -->
    <title>Hireo</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/colors/blue.css">
</head>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
<center>
    <p> </p>
    <div class=" container body-content">
        <!-- Welcome Text -->
        <div class="welcome-text">
            <h3>Let's create your account!</h3>
        </div>

        <!-- Account Type -->
        <div class="account-type">
            <div>
                <input type="radio" name="account_type_radio" id="freelancer-radio" value ="freelancer" class="account-type-radio" checked />
                <label for="freelancer-radio" class="ripple-effect-dark"><i class="icon-material-outline-account-circle"></i> Freelancer</label>
            </div>

            <div>
                <input type="radio" name="account_type_radio" id="employer-radio" value ="employer" class="account-type-radio" />
                <label for="employer-radio" class="ripple-effect-dark"><i class="icon-material-outline-business-center"></i> Employer</label>
            </div>
        </div>

        @Html.ValidationSummary("", new { @class = "text-danger" })
        <div class="form-group">

            <div class="col-md-10">
                <div class="input-with-icon-left">
                    <i class="icon-material-baseline-mail-outline"></i>
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control input-text with-border", placeholder = "Email Address" })
                </div>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                <div class="input-with-icon-left">
                    <i class="icon-material-outline-lock"></i>
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control input-text with-border", placeholder = "Password" })
                </div>
            </div>
        </div>
        <div class="form-group">

            <div class="col-md-10">
                <div class="input-with-icon-left">
                    <i class="icon-material-outline-lock"></i>
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control input-text with-border", placeholder = "Confirm Password" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" class="btn btn-default" value="Register" />
            </div>
        </div>
    </div>
    </center>

            }

            @section Scripts {
                @Scripts.Render("~/bundles/jqueryval")
            }
