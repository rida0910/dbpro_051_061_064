@model IEnumerable<FreelancerMarketplace.Models.Category>
@{
    ViewBag.Title = "Hireo";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<html>
<head>

    <!-- Basic Page Needs
    ================================================== -->
    <title>Hireo</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <!-- CSS
    ================================================== -->
    <link rel="stylesheet" href="~/css/style.css">
    <link rel="stylesheet" href="~/css/colors/blue.css">

</head>

<body>



    <!-- Intro Banner
    ================================================== -->
    <!-- add class "disable-gradient" to enable consistent background overlay -->
    <div class="intro-banner" data-background-image="home.jpg">
        <div class="container">

            <!-- Intro Headline -->
            <div class="row">
                <div class="col-md-12">
                    <div class="banner-headline">
                        <h3>
                            <strong>Hire experts or be hired for any job, any time.</strong>
                            <br>
                            <span>Thousands of small businesses use <strong class="color">Hireo</strong> to turn their ideas into reality.</span>
                        </h3>
                    </div>
                </div>
            </div>

            <!-- Search Bar -->
            <div class="row">
                <div class="col-md-12">
                    <div class=" margin-top-95">

                        @using (Html.BeginForm("Search", "Home", FormMethod.Get))
                        {
                            <!-- Search Field -->
                        <div class="intro-search-field with-autocomplete intro-banner-search-form">
                            <label for="autocomplete-input" class="field-title ripple-effect">Search Job</label>
                            <div class="input-with-icon">
                                <input id="autocomplete-input" type="text" placeholder="Job Title or Keywords..." name="SearchString">

                            </div>
                            <!-- Button -->
                            <div class="intro-search-button">
                                <button class="button ripple-effect" type="submit">Search</button>
                            </div>

                        </div>
                        }



                        






                        @*@using (Html.BeginForm("Search", "Home", FormMethod.Get))
        {
            <div class="input-with-icon">
                @Html.TextBox("SearchString", null, new { @class = "form-control pull-right", placeholder = "Search Project" })
                @*<button type="submit" class="btn btn-default pull-right">Search</button>*@
                        @*<i class="icon-material-outline-search"></i>
            </div>
        }*@





                    </div>
                </div>
            </div>



        </div>
    </div>


    <!-- Content
    ================================================== -->
    <!-- Category Boxes -->
    <div class="section margin-top-65">
        <div class="container">
            <div class="row">
                <div class="col-xl-12">

                    <div class="section-headline centered margin-bottom-15">
                        <h3>Popular Job Categories</h3>
                    </div>

                    <!-- Category Boxes Container -->
                    <div class="categories-container">

                        @foreach (var item in Model)
                        {
                        <!-- Category Box -->
                        <a href="/Home/CategoryJobs/@item.CategoryId" class="category-box">
                            <div class="category-box-icon">
                                <i class="icon-line-awesome-suitcase"></i>
                            </div>
                            <div class="category-box-counter">@item.countOfJobs</div>
                            <div class="category-box-content">
                                <h3>@item.CategoryName</h3>
                                
                            </div>
                        </a>
                            }


                    </div>

                </div>
            </div>
        </div>
    </div>

</body>
</html>

